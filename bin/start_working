#!/usr/bin/env zsh

# Kill all the process of apps that I won't be using
pkill -9 Discord &
pkill -9 thunar &
pkill -9 sonixd &
pkill -9 xst
pkill -9 librewolf &
pkill -9 postman &
pkill -9 audacity &
pkill -9 ark &
pkill -9 kitty &
pkill -9 chromium &
pkill -9 easytag &
pkill -9 haruna &
pkill -9 nvidia &
pkill -9 bleachbit &
pkill -9 bitwarden &
pkill -9 estash &
pkill -9 clementine &
pkill -9 electron &
pkill -9 gparted &
pkill -9 goverlay &
pkill -9 gimp &
pkill -9 inkscape &
pkill -9 gnome &
pkill -9 krita &
pkill -9 kdenlive &
pkill -9 kvantum &
pkill -9 lxappearance &
pkill -9 mpv &
pkill -9 tor &
pkill -9 firefox &
pkill -9 notepadqq &
pkill -9 DesktopEditors &
pkill -9 obs &
pkill -9 lutris &
pkill -9 steam &
pkill -9 zoom &
pkill -9 virt-manager &
pkill -9 zenity &
pkill -9 winetricks &
pkill -9 ristretto &
pkill -9 xterm &
pkill -9 pavucontrol &

# Open xst with custom settings for neovim + Go into current project and run nix develop
cd $HOME/Code && xrdb -load $HOME/.config/xtheme/90.b-theme && xst -c NeoVim -T NeoVim -t NeoVim -e tmux attach-session -t code || xst -c NeoVim -T NeoVim -t NeoVim -e tmux new-session -s code & xrdb -load $HOME/.config/xtheme/90-theme && sleep 2 && tmux send-keys -t code C-u && tmux send-keys -t code "cd $HOME/Code/AWS/RekoSearch/" ENTER && tmux send-keys -t code "nix develop" ENTER &

# Open the browser with everything needed for current project + open another window on the second monitor with the project
librewolf "https://start.server.com/" "https://trilium.server.com/#root/M31xPyu71vtg/kOwY8uyEI1Os/p1pgPZFrvm2K/UfNfcsyGgUUf?ntxId=z2dL8r" "https://vikunja.server.com/projects/30/kanban" & sleep 2 && bspc rule -a 'librewolf:*' desktop=^6 && librewolf --new-window "http://localhost:5000" & sleep 2 && bspc rule -a 'librewolf:*' desktop=^3 &

# Open bruno
bruno &

# Start pomodor timer
gnome-pomodoro &
sleep 2
gnome-pomodoro --start &

# Return to coding workspace
bspc desktop -f '^2' &
